@inherits LayoutComponentBase
@using Microsoft.AspNetCore.Components.Authorization
@using OnyraProjet.Authentication
@inject AuthenticationStateProvider authenticationStateProvider
@inject NavigationManager nav
<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <AuthorizeView Roles="User">
                <Authorized>
                    <a href="/Profil" class="text-dark ms-3">
                        <i class="bi bi-person-circle fs-3"></i>
                    </a>
                    <button class="btn btn-link text-danger fw-bold"
                            style="text-decoration:none;"
                            @onclick="Deconnecter">
                        <i class="bi bi-box-arrow-right me-1"></i>
                        Déconnexion
                    </button>

                    @* <p>Hello, @context.User.Identity.Name</p> *@
                </Authorized>
                <NotAuthorized>
                </NotAuthorized>
            </AuthorizeView>

        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a> 
</div>

@code {

    public async Task Deconnecter()
    {
        var auth = authenticationStateProvider as CustomAuthentificationStateProvider;
        await auth.UpDateAuthenticationState(null);
        nav.NavigateTo("/", true);
    }

}