@page "/profil"

@using Microsoft.AspNetCore.Components.Authorization
@using System.Security.Claims
@using Microsoft.AspNetCore.Components.Forms
@using OnyraProjet.Authentication
@using OnyraProjet.Services
@using OnyraProjet.Models

@inject ProfilService ProfilService
@inject AuthenticationStateProvider AuthService
@inject NavigationManager NavigationManager
@inject IJSRuntime JS

<PageTitle>Mon profil</PageTitle>

@if (isLoading)
{
    <div class="d-flex justify-content-center align-items-center" style="min-height: 80vh;">
        <div>Chargement...</div>
    </div>
}
else if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="d-flex justify-content-center align-items-center" style="min-height: 80vh;">
        <div class="alert alert-danger">@errorMessage</div>
    </div>
}
else if (profil != null)
{
    <div class="d-flex justify-content-center align-items-center" style="min-height: 80vh;">
        <div class="card shadow p-4" style="width: 480px;">

            <EditForm Model="profil" OnValidSubmit="HandleValidSubmit">

                <DataAnnotationsValidator />
                <ValidationSummary />

                <h3 class="text-center mb-4"><strong>Mon profil</strong></h3>

                <div class="mb-3 text-center">
                    @if (profil.Photo != null && profil.Photo.Length > 0)
                    {
                        <img src="@ConvertToBase64(profil.Photo)" alt="Photo Profil"
                             style="width:120px;height:120px;border-radius:50%;object-fit:cover;" />
                    }
                    else
                    {
                        <div class="rounded-circle bg-secondary d-inline-flex justify-content-center align-items-center"
                             style="width:120px;height:120px;color:white;font-size:2rem;">
                            @InitialesUtilisateur
                        </div>
                    }
                </div>

                <div class="mb-3">
                    <label class="form-label">Photo de profil</label>
                    <InputFile OnChange="HandlePhotoUpload" class="form-control" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Nom</label>
                    <InputText class="form-control" @bind-Value="profil.NomUtilisateur" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Prénom</label>
                    <InputText class="form-control" @bind-Value="profil.PrenomUtilisateur" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Adresse courriel</label>
                    <InputText class="form-control" @bind-Value="profil.Courriel" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Âge</label>
                    <InputNumber class="form-control" @bind-Value="profil.Age" />
                </div>

                <!-- RAMQ affichée mais non modifiable -->
                <div class="mb-3">
                    <label class="form-label">RAMQ</label>
                    <input class="form-control bg-light" value="@profil.RamQ" readonly />
                </div>

                <!-- Bouton enregistrer -->
                <button type="submit" class="btn btn-primary w-100 mb-2">
                    Enregistrer
                </button>

                @if (!string.IsNullOrEmpty(successMessage))
                {
                    <div class="alert alert-success mt-2">@successMessage</div>
                }

                <!-- Les 3 boutons demandés -->
                <div class="mt-3 d-grid gap-2">

                    <!-- Mot de passe oublié -->
                    <button type="button" class="btn btn-warning"
                            @onclick="MotDePasseOublie">
                        Mot de passe oublié ?
                    </button>

                    <!-- Déconnexion -->
                    <button type="button" class="btn btn-danger"
                            @onclick="Deconnecter">
                        Déconnexion
                    </button>

                </div>

            </EditForm>

        </div>
    </div>
}

@code
{
    private ProfilModel? profil;
    private string? successMessage;
    private string? errorMessage;
    private int userId;
    private bool isLoading = true;

    //Si l’utilisateur n’a pas de photo, on affiche les initiales dans un rond.
    //Blazor plante si le code<div> @InitialesUtilisateur</div> est toujours là
    private string InitialesUtilisateur =>
        $"{(profil?.PrenomUtilisateur?.FirstOrDefault() ?? ' ')}{(profil?.NomUtilisateur?.FirstOrDefault() ?? ' ')}".ToUpper();

    /// <summary>
    /// Vérifie l’utilisateur et charge son profil.
    /// </summary>
    /// <returns></returns>
    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthService.GetAuthenticationStateAsync();
        var user = authState.User;

        if (user.Identity == null || !user.Identity.IsAuthenticated)
        {
            errorMessage = "Vous devez être connecté pour accéder à votre profil.";
            isLoading = false;
            return;
        }

        var idClaim = user.FindFirst(c => c.Type == ClaimTypes.NameIdentifier)?.Value;

        if (!int.TryParse(idClaim, out userId) || userId <= 0)
        {
            errorMessage = "Impossible d'identifier l'utilisateur.";
            isLoading = false;
            return;
        }

        profil = await ProfilService.GetProfilAsync(userId);

        if (profil == null)
        {
            errorMessage = "Impossible de charger votre profil.";
        }

        isLoading = false;
    }
    /// <summary>
    /// Envoie le profil mis à jour au serveur et affiche un message de réussite ou une alerte en cas d’erreur.
    /// </summary>
    /// <returns></returns>
    private async Task HandleValidSubmit()
    {
        successMessage = null;

        if (profil == null || userId <= 0)
            return;

        var result = await ProfilService.UpdateProfilAsync(userId, profil);

        if (result)
        {
            successMessage = "Profil mis à jour avec succès !";

            if (AuthService is CustomAuthentificationStateProvider customAuth)
            {
                // Récupérer la session existante
                var sessionResult = await customAuth.GetUserSessionAsync();
                var role = sessionResult?.Role ?? "Utilisateur";

                var updatedSession = new UserSession2
                {
                    Id = userId,
                    Name = profil.NomUtilisateur,
                    FirstName = profil.PrenomUtilisateur,
                    Role = role
                };

                await customAuth.UpDateAuthenticationState(updatedSession);
            }
        }
        else
        {
            await JS.InvokeVoidAsync("alert", "Une erreur est survenue lors de la mise à jour du profil.");
        }
    }


    /// <summary>
    /// Récupère la photo envoyée par l’utilisateur, vérifie sa taille, la lit en mémoire et l’enregistre dans profil.Photo sous forme de tableau de bytes.
    /// </summary>
    /// <param name="photo"></param>
    /// <returns></returns>
    private async Task HandlePhotoUpload(InputFileChangeEventArgs photo) //Contient le fichier choisi de l’utilisateur
    {
        var file = photo.File; //Récupère le fichier
        if (file == null || profil == null) return; // aucun fichier || aucun profil alors on arrête

        const long maxFileSize = 5 * 1024 * 1024; // Définit sa taille -> (5 Mo max)

        using var ms = new MemoryStream(); // lire le fichier, le mettre dans la mémoire, l'envoyer a profil
        await file.OpenReadStream(maxFileSize).CopyToAsync(ms); //Ouvre le fichier, Limite sa taille à 5
        profil.Photo = ms.ToArray();  //l'envoie à profil
    }

    private string ConvertToBase64(byte[] imageData)
    {
        return $"data:image/png;base64,{Convert.ToBase64String(imageData)}"; // indique au navigateur que c’est une image encodée en Base64.
    }

    /// <summary>
    /// redirige simplement l’utilisateur vers la page “mot de passe oublié.
    /// </summary>
    /// 
    private void MotDePasseOublie()
    {
        NavigationManager.NavigateTo("/mot-de-passe-oublie");
    }
    /// <summary>
    /// déconnecte l’utilisateur en réinitialisant son authentification, puis le renvoie à la page d’accueil.
    /// </summary>
    /// <returns></returns>
    private async Task Deconnecter()
    {
        if (AuthService is CustomAuthentificationStateProvider custom)
        {
            await custom.UpDateAuthenticationState(null);
        }

        NavigationManager.NavigateTo("/", true);
    }
}
